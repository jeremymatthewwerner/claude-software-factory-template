 jobs:
+  # ===========================================
+  # DIAGNOSTIC REQUESTS (triggered by @devops mentions)
+  # ===========================================
+  diagnostic-request:
+    if: |
+      github.event_name == 'issue_comment' &&
+      !github.event.issue.pull_request &&
+      (contains(github.event.comment.body, '@devops') ||
+       contains(github.event.comment.body, '@DevOps'))
+    runs-on: ubuntu-latest
+    timeout-minutes: 10
+    steps:
+      - uses: actions/checkout@v4
+
+      - name: Acknowledge request
+        env:
+          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
+        run: |
+          gh issue comment ${{ github.event.issue.number }} --body "## üîß DevOps Agent - Diagnostic Request Received
+
+          **Requested by:** @${{ github.event.comment.user.login }}
+          **Request:** Running diagnostics...
+
+          **Status:** Gathering production data...
+          [View workflow logs](${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }})"
+
+      - name: Install Railway CLI
+        continue-on-error: true
+        run: |
+          for attempt in 1 2 3; do
+            echo "Railway CLI install attempt $attempt..."
+            if curl -fsSL https://railway.app/install.sh | sh; then
+              echo "Railway CLI installed successfully"
+              break
+            fi
+            if [ $attempt -lt 3 ]; then
+              sleep $((2 ** attempt))
+            fi
+          done
+          echo "$HOME/.railway/bin" >> $GITHUB_PATH
+
+      - name: Run diagnostic query
+        id: diagnostics
+        continue-on-error: true
+        env:
+          RAILWAY_TOKEN: ${{ secrets.RAILWAY_TOKEN }}
+          PRODUCTION_BACKEND_URL: ${{ secrets.PRODUCTION_BACKEND_URL }}
+          PRODUCTION_FRONTEND_URL: ${{ secrets.PRODUCTION_FRONTEND_URL }}
+        run: |
+          echo "=== Health Check ===" > /tmp/diagnostics.txt
+
+          # Backend health
+          if [ -n "$PRODUCTION_BACKEND_URL" ]; then
+            echo "Backend ($PRODUCTION_BACKEND_URL/health):" >> /tmp/diagnostics.txt
+            curl -s --max-time 10 "$PRODUCTION_BACKEND_URL/health" >> /tmp/diagnostics.txt 2>&1 || echo "FAILED" >> /tmp/diagnostics.txt
+            echo "" >> /tmp/diagnostics.txt
+          fi
+
+          # Frontend health
+          if [ -n "$PRODUCTION_FRONTEND_URL" ]; then
+            echo "Frontend ($PRODUCTION_FRONTEND_URL):" >> /tmp/diagnostics.txt
+            HTTP_CODE=$(curl -s -o /dev/null -w "%{http_code}" --max-time 10 "$PRODUCTION_FRONTEND_URL" 2>&1)
+            echo "HTTP $HTTP_CODE" >> /tmp/diagnostics.txt
+            echo "" >> /tmp/diagnostics.txt
+          fi
+
+          echo "=== Railway Service Status ===" >> /tmp/diagnostics.txt
+          railway status >> /tmp/diagnostics.txt 2>&1 || echo "Railway CLI not configured" >> /tmp/diagnostics.txt
+          echo "" >> /tmp/diagnostics.txt
+
+          echo "=== Recent Backend Logs (last 30 lines) ===" >> /tmp/diagnostics.txt
+          railway logs --service backend --limit 30 >> /tmp/diagnostics.txt 2>&1 || echo "Unable to fetch logs" >> /tmp/diagnostics.txt
+
+          # Look for user-related logs if the comment mentions a user
+          COMMENT="${{ github.event.comment.body }}"
+          if echo "$COMMENT" | grep -qiE 'user|email|@'; then
+            echo "" >> /tmp/diagnostics.txt
+            echo "=== User-Related Logs ===" >> /tmp/diagnostics.txt
+            railway logs --service backend --limit 100 2>&1 | grep -iE 'user|email|auth|login|register' | tail -20 >> /tmp/diagnostics.txt || true
+          fi
+
+          cat /tmp/diagnostics.txt
+
